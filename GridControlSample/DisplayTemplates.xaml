<ResourceDictionary 
					x:Class="GridControlSample.DisplayTemplates"
					xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:GridControlSample"
                    xmlns:themes="http://schemas.devexpress.com/winfx/2008/xaml/editors/themekeys">

	<DataTemplate DataType="{x:Type local:SampleItem}">
		<TextBlock Text="{Binding Item}" TextAlignment="Right" Style="{DynamicResource {themes:TextEditThemeKey ResourceKey=TextBlockInplaceStyle}}"/>
	</DataTemplate>

</ResourceDictionary>